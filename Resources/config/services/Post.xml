<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>

		<!-- Forms -->
		<parameter key="asf_doc.form.post.type.class">ASF\DocumentBundle\Form\Type\PostFormType</parameter>
		<parameter key="asf_doc.form.post.handler.class">ASF\DocumentBundle\Form\Handler\PostFormHandler</parameter>
		
	</parameters>

    <services>

		<!-- FORMS -->
		<service id="asf_doc.form.post" factory-method="create" factory-service="form.factory" class="Symfony\Component\Form\Form">
        	<argument type="service" id="asf_doc.form.post.type" />
        </service>
        
		<service id="asf_doc.form.post.type" class="%asf_doc.form.post.type.class%">
            <argument type="service" id="asf_doc.post.manager" />
            <argument type="service" id="security.context" />
            <argument>%asf_doc.supports.account%</argument>
            <argument>%asf_doc.supports.asf_user%</argument>
            <argument>%asf_doc.supports.genemu_form%</argument>
            <tag name="form.type" alias="asf_doc_post_form_type" />
        </service>
		
		<service id="asf_doc.form.post.handler" class="%asf_doc.form.post.handler.class%">
			<argument type="service" id="asf_doc.form.post" />
        	<argument type="service" id="asf_doc.post.manager" />
        	<argument type="service" id="security.acl.provider" />
        	<tag name="form_handler.factory" />
        </service>
        
    </services>
    
</container>
