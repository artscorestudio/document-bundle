<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
	
		<!-- Forms -->
		<parameter key="asf_doc.form.page.type.class">ASF\DocumentBundle\Form\Type\PageFormType</parameter>
		<parameter key="asf_doc.form.page.handler.class">ASF\DocumentBundle\Form\Handler\PageFormHandler</parameter>

	</parameters>

    <services>
    
		<!-- FORMS -->
		<service id="asf_doc.form.page" factory-method="create" factory-service="form.factory" class="Symfony\Component\Form\Form">
        	<argument type="service" id="asf_doc.form.page.type" />
        </service>
        
		<service id="asf_doc.form.page.type" class="%asf_doc.form.page.type.class%">
            <argument type="service" id="asf_doc.page.manager" />
            <argument type="service" id="security.context" />
            <argument>%asf_doc.supports.account%</argument>
            <argument>%asf_doc.supports.asf_user%</argument>
            <argument>%asf_doc.supports.genemu_form%</argument>
            <tag name="form.type" alias="asf_doc_page_form_type" />
        </service>
		
		<service id="asf_doc.form.page.handler" class="%asf_doc.form.page.handler.class%">
			<argument type="service" id="asf_doc.form.page" />
        	<argument type="service" id="asf_doc.page.manager" />
        	<argument type="service" id="security.acl.provider" />
        	<tag name="form_handler.factory" />
        </service>

    </services>
    
</container>
